{{!
    @template block_mylearning/view_progress_pie

    This template renders a pie chart to show course progress.

    Example context (json):
    {
        "iscompleted": false,
        "progress": "60"
    }
}}
<div class="progress-wrapper"
     title="{{#iscompleted}}{{#str}} completed, block_mylearning {{/str}}{{/iscompleted}}{{^iscompleted}}{{progress}}%{{/iscompleted}}"
     role="progressbar"
     aria-valuenow="{{progress}}"
     aria-valuemin="0"
     aria-valuemax="100">
    {{^iscompleted}}
        <div class="pie">
            <div class="pie-progress progress-{{progress}}"></div>
        </div>
    {{/iscompleted}}
    {{#iscompleted}}
        {{#pix}} check-on, block_mylearning {{/pix}}
    {{/iscompleted}}
    <span class="sr-only">{{progress}}% {{#str}} completed, block_mylearning {{/str}}</span>
</div>
